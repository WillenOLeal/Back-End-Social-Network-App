{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6", 
         "ES2017"
      ],
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "sourceMap": true
   }, 

   "exclude": ["node_modules"],
   "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}